{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Update Git Submodules",
      "type": "shell",
      "command": "git submodule update --remote && git commit -am 'Update submodules' && git push",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Clone Repository and Initialize Submodules",
      "type": "shell",
      "command": "git clone --recursive [URL of the Git repository] && cd $(basename $_ .git) && git submodule update --init --recursive",
      "problemMatcher": []
    },
    {
      "label": "Initialize and Update Submodules",
      "type": "shell",
      "command": "git submodule update --init --recursive",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Update Mantine Submodule and Install Dependencies",
      "type": "shell",
      "command": "git submodule update --init --recursive && cd vendors/mantine && git switch wire-storybook-to-custom-theme && git fetch -p && git pull && cd ../.. && yarn install",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start Mantine Storybook",
      "type": "shell",
      "command": "cd vendors/mantine && yarn storybook",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
  ]
}
